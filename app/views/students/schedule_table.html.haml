#tc-header
  #tc-title
    %h4= @ts.term.name
    %div (#{l @ts.term.start_date, :format => :long} â€“ #{l @ts.term.end_date, :format => :long})

%table#student-schedule
  %tr
    %th Hora
    %th Lunes
    %th Martes
    %th Miercoles
    %th Jueves
    %th Viernes
    %th Sabado
    %th Domingo
  - (@min_hour..@max_hour).each do |i|
    %tr
      %td.hora= "#{i}:00"
      - (1..7).each do |j|
        %td.dia
          - @schedule[i][j].each do |k|
            .session_block(class="session_style_#{k['n']}")
              .session-title= k['name']
              .session-staff= k['staff_name']
              .session-comments= k['comments']

