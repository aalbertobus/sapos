- form_for @program, :remote => true, :html => { :'data-type' => 'html', :id => 'item-new-form' } do |f|

  .resource-header
    .resource-title
      %h1= "Nuevo Programa"
    .resource-save
      = f.submit 'Agregar'

  #resource-tabs
    %ul
      %li.first-tab= link_to "Detalles", "#detalles"

    #detalles
      %h2 Detalles

      .field#field_program_name
        = f.label :name, mark_required(@program, :name) + 'Nombre'
        = f.text_field :name 

      .field#field_program_prefix
        = f.label :prefix, mark_required(@program, :prefix) + 'Clave'
        = f.text_field :prefix
